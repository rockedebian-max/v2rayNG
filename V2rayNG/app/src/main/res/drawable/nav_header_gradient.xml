<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base gradient: deep dark blue -->
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#080C14"
                android:centerColor="#0F1923"
                android:endColor="#0A1628"
                android:type="linear" />
        </shape>
    </item>

    <!-- Subtle accent line at bottom -->
    <item
        android:top="148dp">
        <shape>
            <gradient
                android:angle="0"
                android:startColor="#0000"
                android:centerColor="#2200D4AA"
                android:endColor="#0000"
                android:type="linear" />
        </shape>
    </item>

</layer-list>
