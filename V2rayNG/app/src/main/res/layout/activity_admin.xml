<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0E14">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- ═══ SECTION: Target Device ═══ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#0F1620"
            app:cardCornerRadius="12dp"
            app:strokeColor="#1A3A5C"
            app:strokeWidth="1dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <!-- Section label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_section_target"
                    android:textColor="#5A6B7A"
                    android:textSize="11sp"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.15"
                    android:textAllCaps="true"
                    android:layout_marginBottom="10dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_device_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/admin_hint_device_id"
                    app:boxStrokeColor="#00B4FF"
                    app:hintTextColor="#5A6B7A"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_target_device_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapCharacters|textNoSuggestions"
                        android:maxLength="14"
                        android:fontFamily="monospace"
                        android:textColor="#00B4FF"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/cb_no_device_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/admin_no_device_id"
                    android:textColor="#8A9BB0"
                    android:textSize="13sp"
                    app:thumbTint="#00B4FF"
                    app:trackTintMode="src_in" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ═══ SECTION: Expiration ═══ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#0F1620"
            app:cardCornerRadius="12dp"
            app:strokeColor="#1A3A5C"
            app:strokeWidth="1dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_section_expiration"
                    android:textColor="#5A6B7A"
                    android:textSize="11sp"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.15"
                    android:textAllCaps="true"
                    android:layout_marginBottom="10dp" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/cb_no_expiration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_expiration_no_expire"
                    android:textColor="#8A9BB0"
                    android:textSize="13sp"
                    app:thumbTint="#00B4FF"
                    app:trackTintMode="src_in" />

                <LinearLayout
                    android:id="@+id/layout_expiration_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="@string/admin_hint_amount"
                        app:boxStrokeColor="#00B4FF"
                        app:hintTextColor="#5A6B7A"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_expiration_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textColor="#E0E0E0"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="@string/admin_hint_unit"
                        app:boxStrokeColor="#00B4FF"
                        app:hintTextColor="#5A6B7A"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/spinner_expiration_unit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="#E0E0E0"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ═══ SECTION: Config Links ═══ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#0F1620"
            app:cardCornerRadius="12dp"
            app:strokeColor="#1A3A5C"
            app:strokeWidth="1dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_section_config"
                    android:textColor="#5A6B7A"
                    android:textSize="11sp"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.15"
                    android:textAllCaps="true"
                    android:layout_marginBottom="10dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/admin_hint_config_link"
                    app:boxStrokeColor="#00B4FF"
                    app:hintTextColor="#5A6B7A"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_config_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="3"
                        android:maxLines="8"
                        android:gravity="top"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:fontFamily="monospace"
                        android:textColor="#00E676"
                        android:textSize="12sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Quick import buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_scan_qr"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="@string/admin_btn_scan_qr"
                        android:textAllCaps="false"
                        android:textColor="#8A9BB0"
                        app:icon="@drawable/ic_scan_24dp"
                        app:iconTint="#00B4FF"
                        app:iconGravity="start"
                        app:strokeColor="#1A3A5C"
                        app:cornerRadius="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_paste_clipboard"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="@string/admin_btn_paste"
                        android:textAllCaps="false"
                        android:textColor="#8A9BB0"
                        app:icon="@drawable/ic_paste_24dp"
                        app:iconTint="#00B4FF"
                        app:iconGravity="start"
                        app:strokeColor="#1A3A5C"
                        app:cornerRadius="12dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Generate button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_generate"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="14dp"
            android:text="@string/admin_btn_generate"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:letterSpacing="0.04"
            app:backgroundTint="#00B4FF"
            android:textColor="#0A0E14"
            app:icon="@drawable/ic_lock_24dp"
            app:iconTint="#0A0E14"
            app:iconGravity="start"
            app:cornerRadius="12dp" />

        <!-- Result section (hidden until generated) -->
        <LinearLayout
            android:id="@+id/layout_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:visibility="gone">

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1A3A5C"
                android:layout_marginBottom="16dp" />

            <!-- QR Code (single config only) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="#0A0E14"
                app:cardCornerRadius="12dp"
                app:strokeColor="#1A00B4FF"
                app:strokeWidth="1dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="12dp">

                    <!-- Corner brackets label -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="[ ENCRYPTED QR ]"
                        android:textColor="#4000B4FF"
                        android:textSize="9sp"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.3"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:id="@+id/iv_qr_code"
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:contentDescription="@string/admin_qr_description"
                        android:scaleType="fitCenter" />

                    <!-- Scan instruction -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/admin_qr_scan_hint"
                        android:textColor="#5A6B7A"
                        android:textSize="10sp"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Batch mode count label -->
            <TextView
                android:id="@+id/tv_batch_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:visibility="gone" />

            <!-- Generated link text -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#0A0E14"
                app:cardCornerRadius="8dp"
                app:strokeColor="#1A3A5C"
                app:strokeWidth="1dp">

                <TextView
                    android:id="@+id/tv_generated_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:fontFamily="monospace"
                    android:textSize="10sp"
                    android:textColor="#00B4FF"
                    android:textIsSelectable="true"
                    android:breakStrategy="simple" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Action buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_copy_link"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="@string/admin_btn_copy"
                    android:textAllCaps="false"
                    android:textColor="#8A9BB0"
                    app:icon="@drawable/ic_copy"
                    app:iconTint="#00B4FF"
                    app:iconGravity="start"
                    app:strokeColor="#1A3A5C"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_share"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="@string/admin_btn_share"
                    android:textAllCaps="false"
                    android:textColor="#8A9BB0"
                    app:icon="@drawable/ic_share_24dp"
                    app:iconTint="#00B4FF"
                    app:iconGravity="start"
                    app:strokeColor="#1A3A5C"
                    app:cornerRadius="12dp" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_clear"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/admin_btn_clear"
                android:textAllCaps="false"
                android:textColor="#5A6B7A" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
