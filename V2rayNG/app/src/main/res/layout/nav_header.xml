<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/view_height_dp160"
    android:background="@drawable/nav_header_gradient"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_spacing_dp16">

    <!-- Brand icon -->
    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@null" />

    <!-- Brand name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toolbar_brand_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:letterSpacing="0.2"
        android:textColor="#00B4FF"
        android:fontFamily="sans-serif-medium" />

    <!-- Tagline -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/nav_header_tagline"
        android:textSize="12sp"
        android:letterSpacing="0.3"
        android:textColor="#5A6B7A"
        android:fontFamily="sans-serif-light"
        android:textAllCaps="true" />

    <!-- Device ID row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_device_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_id_label"
            android:textSize="10sp"
            android:textColor="#5A6B7A"
            android:fontFamily="monospace"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/tv_device_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="11sp"
            android:textColor="#00B4FF"
            android:fontFamily="monospace" />

        <ImageView
            android:id="@+id/btn_copy_device_id"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_copy"
            android:contentDescription="@string/device_id_copy_description"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

</LinearLayout>
