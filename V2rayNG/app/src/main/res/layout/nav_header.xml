<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/view_height_dp160"
    android:background="@drawable/nav_header_gradient"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_spacing_dp16">

    <!-- Brand icon -->
    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@null" />

    <!-- Brand name (long press = secret admin access) -->
    <TextView
        android:id="@+id/tv_brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toolbar_brand_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:letterSpacing="0.2"
        android:textColor="#00B4FF"
        android:fontFamily="sans-serif-medium" />

    <!-- Tagline -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/nav_header_tagline"
        android:textSize="12sp"
        android:letterSpacing="0.3"
        android:textColor="#5A6B7A"
        android:fontFamily="sans-serif-light"
        android:textAllCaps="true" />

    <!-- Device ID card â€” tap to copy -->
    <LinearLayout
        android:id="@+id/device_id_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_device_id_card"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="14dp"
        android:paddingVertical="10dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <!-- Left: label + ID stacked -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_device_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_id_label"
                android:textSize="10sp"
                android:textColor="#5A6B7A"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.15"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/tv_device_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="15sp"
                android:textColor="#00B4FF"
                android:fontFamily="monospace"
                android:letterSpacing="0.08" />

        </LinearLayout>

        <!-- Right: copy icon -->
        <ImageView
            android:id="@+id/btn_copy_device_id"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/ic_copy"
            android:contentDescription="@string/device_id_copy_description"
            android:tint="#5A6B7A" />

    </LinearLayout>

</LinearLayout>
